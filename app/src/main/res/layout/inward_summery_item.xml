<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inward_no"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:paddingLeft="2dp"
            android:text="Inward No"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_inward_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:text="Inward Date"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_inv_no"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:text="Inv No"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_inv_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:text="Inv Date"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_supp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:text="Supplier"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"
            android:text="Qty"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_amnt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"
            android:text="Amnt"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:text="Status"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_cgst"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"
            android:text="CGST"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_sgst"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"
            android:text="SGST"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_igst"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"
            android:text="IGST"
            android:textColor="@color/black" />


    </LinearLayout>
</LinearLayout>