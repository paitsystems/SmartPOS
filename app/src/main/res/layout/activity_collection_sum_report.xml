<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExpenseReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mobpadding2"
            android:text="@string/import_data_from_date_range"
            android:visibility="gone" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mobmargin2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mobmargin2"
                    android:layout_weight="0.5"
                    android:text="@string/from_date"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:text="@string/to_date"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/all_dates"
                    android:visibility="invisible" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/date_border">

                    <TextView
                        android:id="@+id/tv_fromdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="04/Aug/2018"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/date_border">


                    <TextView
                        android:id="@+id/tv_todate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="All Date"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/show"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="3dp">

        <!--<HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="horizontal"
            android:layout_weight="1">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cashier"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="Cashier"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:text="NetCollection"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_salecash"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:text="SaleCash"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_cashback"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="CashBack"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_netcash"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="NetCash"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_cheque"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="Cheque "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="Card"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_opa"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="OtherPayAmt"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_exprec"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="ExpReceipt"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_exppay"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/color_back"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:text="ExpPayment"
                    android:textColor="@color/white"
                    android:visibility="gone" />


            </LinearLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/custbtndraw"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Total"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_netcoll"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_salecash"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_cashback"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_netcash"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_cheque"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_card"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_opa"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_expreceipt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_exppay"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>
        <!--</HorizontalScrollView>-->
    </LinearLayout>

    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>