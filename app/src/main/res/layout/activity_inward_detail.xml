<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExpenseReportActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/custbtndraw"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_supp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:text="Supplier"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_inward_no"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:text="Inward No"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_final_prod"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:text="Final Pod"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_qty"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="Qty"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_pur_rate"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="Prod Rate"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_sale_rate"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="Sale Rate"
                            android:textColor="@color/white" />


                        <TextView
                            android:id="@+id/tv_gstper"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|right|center"
                            android:gravity="right|center"
                            android:text="gst%"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_cgst"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="CGST"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_sgst"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="SGST"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_igst"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="IGST"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_hsn_code"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:text="HSNCode"
                            android:textColor="@color/white" />


                    </LinearLayout>

                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/custbtndraw"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:paddingLeft="2dp"
                            android:text="Total"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left|center" />

                        <TextView
                            android:id="@+id/tv_tot_qty"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="0"
                            android:textColor="@color/white" />

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tot_purchaserate"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center" />

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tv_tot_salerate"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center" />

                        <TextView
                            android:id="@+id/tv_tot_gstper"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="0"
                            android:textColor="@color/white" />


                        <TextView
                            android:id="@+id/tv_tot_cgst"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="0"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_tot_sgst"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="0"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_tot_igst"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="0"
                            android:textColor="@color/white" />
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        style="@style/footerstyleMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>