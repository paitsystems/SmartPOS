                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/mobmargin2">

                        <Spinner
                            android:id="@+id/sp_exphead"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:backgroundTint="@color/pinkd" />
                    </LinearLayout>

                    <AutoCompleteTextView
                        android:id="@+id/auto_exphead"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="1dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/back_border"
                        android:gravity="center"
                        android:hint="Select Exp Head"
                        android:lines="2"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/back_lay"
                        android:drawableStart="@drawable/ic_border_color_black_24dp1"
                        android:focusable="false"
                        android:gravity="center"
                        android:lines="2"
                        android:paddingLeft="4dp"
                        android:text="Enter Remark"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <AutoCompleteTextView
                        android:id="@+id/auto_remark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="1dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/back_border"
                        android:gravity="center"
                        android:hint="Enter Remark"
                        android:inputType="textCapWords"
                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lay_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_btn"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

