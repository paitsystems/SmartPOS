        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:layout_weight="0.6"
                android:background="@drawable/back_lay"
                android:drawableStart="@drawable/r24"
                android:focusable="false"
                android:gravity="center"
                android:lines="2"
                android:paddingLeft="4dp"
                android:text="Enter Amount"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:visibility="visible" />

            <EditText
                android:id="@+id/ed_amount"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:layout_weight="0.4"
                android:background="@drawable/back_border"
                android:gravity="center"
                android:hint="Enter amount"
                android:lines="2"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:layout_weight="0.6"
                android:background="@drawable/back_lay"
                android:drawableStart="@drawable/ic_border_color_black_24dp1"
                android:focusable="false"
                android:gravity="center"
                android:lines="2"
                android:paddingLeft="4dp"
                android:text="Enter Remark"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:visibility="visible" />

            <AutoCompleteTextView
                android:id="@+id/auto_remark"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:layout_weight="0.4"
                android:background="@drawable/back_border"
                android:gravity="center"
                android:hint="Enter Remark"
                android:lines="2"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:layout_marginRight="4dp"
                android:layout_weight="0.6"
                android:background="@drawable/back_lay"
                android:drawableStart="@drawable/cat24"
                android:focusable="false"
                android:gravity="center"
                android:lines="2"
                android:paddingLeft="4dp"
                android:text="Select Catagory"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_cat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:layout_weight="0.4"
                android:background="@drawable/back_border"
                android:gravity="center"
                android:hint="click here"
                android:lines="2"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_btn"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_postpone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:src="@drawable/addw32"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_postpone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="ADD"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

